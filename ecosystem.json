{
  "apps" : [{
    "name"      : "socket-server",
    "script"    : "server.js",
    "env": {
      "COMMON_VARIABLE": "true"
    },
    "env_production" : {
      "NODE_ENV": "production",
      "SOCKET_PORT": 3001
    }
  }],
  "deploy" : {
    "production" : {
      "user" : "root",
      "host" : [{
        "host": "vnmagic.net -p 2222",
      }],
      "ref"  : "origin/master",
      "repo" : "git@github.com:allmagic/voip-api.git",
      "path" : "/root/deployment/production",
      "post-deploy" : "npm install && pm2 startOrRestart ecosystem.json --env production",
      "env"  : {
        "NODE_ENV": "production"
      }
    }
  }
}